<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/editTextRoomName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Room Name"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/editTextFoodType"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="52dp"
        android:hint="Food Type"
        app:layout_constraintTop_toTopOf="@id/editTextRoomName"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextStoreName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:hint="Store Name"
        app:layout_constraintTop_toBottomOf="@+id/editTextFoodType"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:hint="Time"
        app:layout_constraintTop_toBottomOf="@+id/editTextStoreName"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>